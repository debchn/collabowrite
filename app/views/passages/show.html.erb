<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @passage.user_id %>
</p>

<p>
  <strong>Prompt:</strong>
  <%= @passage.prompt_id %>
</p>

<p>
  <strong>Text:</strong>
  <%= @passage.text %>
</p>

<%= link_to 'Edit', edit_passage_path(@passage) %> |
<%= link_to 'Back', passages_path %>

<% for child in @passage.descendants %>
  <p>
    <strong>User:</strong>
    <%= child.user_id %>
  </p>

  <p>
    <strong>Prompt:</strong>
    <%= child.prompt_id %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= child.text %>
  </p>
<% end %>

<%= render 'child_form' %>