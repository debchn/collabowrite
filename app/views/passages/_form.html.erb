<%= form_for(@passage, :html => {:class => "submitForm"}) do |f| %>
  <% if @passage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@passage.errors.count, "error") %> prohibited this passage from being saved:</h2>

      <ul>
      <% @passage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => @passage.user_id %>

  <h2>
    Write On! <span class="or">or</span> 
    <button class="refresh", onclick="event.preventDefault();"><i class="fa fa-refresh"></i> Refresh Prompt</button>
  </h2>

  <div class="field form-wrapper">
    <%= f.text_field :title, { :placeholder => "Title goes here." } %>
  </div>

  <div class="field form-wrapper">
    <%= f.text_area :text, { :placeholder => "Fill me with words."} %>
  </div>

  <div class="actions">
    <%= f.submit "Submit!", :class => "submit" %>
  </div>
<% end %>


